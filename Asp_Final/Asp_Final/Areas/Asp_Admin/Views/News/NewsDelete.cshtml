@model News
@{
    ViewData["Title"] = "NewsDelete";
    Layout = "~/Areas/Asp_Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title" />

                </div>
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input class="form-control" asp-for="Photo" />
                </div>
                <div class="form-group">
                    <label asp-for="Info"></label>
                    <input class="form-control" asp-for="Info" />
                </div>
                <input type="submit" value="Delete" />
            </form>

        </div>
    </div>
</div>


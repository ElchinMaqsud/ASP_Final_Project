@model News
@{
    ViewData["Title"] = "CreateNews";
    Layout = "~/Areas/Asp_Admin/Views/Shared/_AdminLayout.cshtml";
}





<div class="container">
    <div class="row">
        <div class="col-6">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Info"></label>
                    <input class="form-control" asp-for="Info" />
                    <span asp-validation-for="Info"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input class="form-control" asp-for="Photo" />
                    <span asp-validation-for="Photo"></span>
                </div>
                <input class="btn btn-success btn-block" type="submit" value="Create" />
            </form>
        </div>

    </div>
</div>


